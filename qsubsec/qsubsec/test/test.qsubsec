section('ANALYSE_{SAMPLE}', description='Analyses a sample')
limits(time='00:{HOURS}:00', vmem='{MEMORY}')
options('V', 'cwd', 'notify')
hold('INIT')
require('TMPDIR', 'ENV_SET')
require('{SAMPLE}.txt', 'PATH_READABLE')
outputs('.')
command('./process {SAMPLE}.txt > {SAMPLE}-output.txt')

section('PRINT_{SAMPLE}', description='Prints a sample')
limits(time='00:{HOURS}:00', vmem='{MEMORY}')
options('V', 'cwd', 'notify')
hold('ANALYSE_{SAMPLE}')
require('{SAMPLE}-output.txt', 'PATH_READABLE')
outputs('.')
command('./print {SAMPLE}-output.txt', log=False)
